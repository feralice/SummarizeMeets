{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",

    "rootDir": "./src/",
    "outDir": "./dist/",

    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    },

    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],

  "ts-node": {
    "transpileOnly": true,
    "require": ["tsconfig-paths/register"]
  }
}
